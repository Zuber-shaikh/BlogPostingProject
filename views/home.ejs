<%- include("partials/header.ejs") %>

<div class="home-page">
  <div class="heading">
    <h1>Posts</h1>
  </div>
  <div class="post">
    <% for (const post of posts) { %> <%= post.name %>
    <div class="buttons">
      <a href="<%= url %>/edit/<%= post.id %>" class="button">Edit</a>
      <a
        href="<%= url %>/delete/<%= post.id %> "
        onclick="return confirm('Are you sure you want to delete this post?')"
        class="button"
      >
        Delete
      </a>
    </div>
    <br />
    <div class="blank">

    </div>
    <% } %>
  </div>


  <div>
    <a href="<%= url %>/create/" class="button">Create New Post</a>
  </div>
</div>
<%- include("partials/footer.ejs") %>
